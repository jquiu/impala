coffee:
  $(document).ready ->
    offer_finish_date = date
    $ ->
      untilDay = new Date(offer_finish_date)
      untilDay.setHours(untilDay.getHours() + 5)
      $('.defaultCountdown').countdown until: untilDay
      return

